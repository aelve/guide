{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "client/*": [
        "client/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "lib": [
      "dom",
      "es2017"
    ]
  }
}