{
  "files": [ 
    "./server.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "esnext",
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": false,
    "lib": [
      "dom",
      "es2017",
      "es5"
    ]
  }
}